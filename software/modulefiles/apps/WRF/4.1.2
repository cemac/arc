#%Module 1.0
package require flavours
flavours init

proc ModulesHelp { } {
        global version
        puts stderr "   This module loads an environment for users to run WRFChem only"
        puts stderr "                  WRF version 4.0                                "
        puts stderr "     Stored at ...                                               "
        puts stderr "
        Version $version
}

module-whatis "WRF NWP "

flavours conflict WRFChem WRF
flavours prereq -class compiler
flavours prereq -class mpi

flavours root     $::env(CEMAC_DIR)/software/apps/WRF/4.1.2
flavours revision 1
flavours commit

setenv WRF_HOME [flavours path]

flavours prepend-path PATH bin
setenv ulimit -s unlimited
setenv ulimit -c unlimited
setenv WRF_CHEM 0
setenv FC ifort
setenv OMP_STACKSIZE 4G
setenv OMP_NUM_THREADS 1

flavours cleanup
